---
import Button from "@components/Button.astro";
import { Icon } from "astro-icon/components";

const { title, description, image, link, tag } = Astro.props;
---

<div
    class="w-[350px] h-96 rounded-2xl flex flex-col overflow-hidden relative"
>
    <div
        class="absolute top-0 right-0 bg-white rounded-es-2xl z-10 pointer-events-none"
    >
        <div class="relative w-full h-full">
            <p class="py-1 px-3">{tag}</p>
            <Icon class="absolute right-full top-0 text-white rotate-90" name="inrounded-corner" size={5} />
            <Icon class="absolute right-0 top-full text-white rotate-90" name="inrounded-corner" size={5} />
        </div>
    </div>
    <figure class="w-full h-2/5 overflow-hidden shadow-md">
        <img
            class="w-full h-full object-cover object-top hover:scale-105 transition-transform duration-300 z-0"
            src={image}
            alt={title}
            loading="lazy"
        />
    </figure>
    <div class="flex flex-col items-baseline gap-2 px-5 h-full p-4 border rounded-es-2xl rounded-ee-2xl">
        <p class="text-xl font-semibold">{title}</p>
        <p>{description}</p>
        <div class="mt-auto ml-auto">
            <Button text="Ver" link={link} icon_name="open" />
        </div>
    </div>
</div>
